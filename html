<div id="cartBox">
    <h2>üõí Ko≈°√≠k</h2>
    <ul id="cartItems"></ul>
    <p>Spolu: <span id="total">0</span> ‚Ç¨</p>
    <button class="btn" onclick="sendOrder()">Objedna≈•</button>
</div>

<script>
    let cart = [];
    let total = 0;

    function addToCart(name, price) {
        cart.push({name, price});
        total += price;
        updateCart();
    }

    function updateCart() {
        const list = document.getElementById("cartItems");
        list.innerHTML = "";
        cart.forEach(item => {
            let li = document.createElement("li");
            li.textContent = `${item.name} - ${item.price} ‚Ç¨`;
            list.appendChild(li);
        });
        document.getElementById("total").textContent = total;
    }

    function sendOrder() {
        let text = cart.map(i => `${i.name} (${i.price}‚Ç¨)`).join(", ");
        let mail = `mailto:tvojmail@gmail.com?subject=Objedn√°vka&body=Objedn√°vam: ${text}. Spolu: ${total} ‚Ç¨`;
        window.location.href = mail;
    }
</script>

